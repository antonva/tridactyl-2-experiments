{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "lib": [
      "dom",
      "dom.iterable",
      "ES2017"
    ],
    "baseUrl": "src/",
    "paths": {
      "@src/*": ["*"],
    },
    "incremental": true,
    "jsx": "react"
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
