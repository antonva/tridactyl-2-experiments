{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": "src/",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "incremental": true,
    "lib": [
      "dom",
      "dom.iterable",
      "ES2017",
    ],
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "outDir": "./build/tsc-out",
    "paths": {
      "@src/*": ["*"],
    },
    "sourceMap": true,
    "strictBindCallApply": true
    "target": "ES2017",
    "typeRoots": [
      "node_modules/@types",
      "src/@types",
    ],
  }
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./src/**/*.test.ts"
  ]
}
